	}while(cont!=0);
	
	printf("VOCE ACERTOU %d de 5 PERGUNTAS\n", correta);
	printf("VOCE ERROU %d de 5 PERGUNTAS\n", errada);
	
	a = notadez(correta);
	
 
	

	 return a;
}

