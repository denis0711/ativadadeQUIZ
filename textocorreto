#include <stdio.h>
#include <stdlib.h>




int notadez(int a){
	if(a == 5){
		return printf("\nVOCE FOI MUITO BEM ACERTOU TUDO!!!!\n");
	}else if(a == 4){
		return printf("\nVOCE FOI MUITO BEM ACERTOU 4/5 PERGUNTAS\n");
	}else if(a == 3){
		return printf("\nVOCE FOI MUITO RAZOAVEL ACERTOU 3/5 PERGUNTAS\n");
	}else if(a == 2){
		return printf("\nVOCE FOI MUITO RUIM ACERTOU 2/5 PERGUNTAS\n");
	}else if(a == 1){
		return printf("\nVOCE FOI PESSIMO ACERTOU 1/5 PERGUNTAS\n");
	}else if(a == 0){
		return printf("\nVOCE ERROU TUDO !!!!!!!!!!!!!!!!!!!!\n");
	}else{
    return 0;
  }
	
}

int futebol(){
	int correta=0, errada=0, resposta, cont=0, a;
	do {
		
			system("cls"); 
			
			printf("       ----------BEM VINDO AO QUIZ SOBRE FUTEBOL----------\n\n\n");
	
			printf("1 - EM QUE ANO O CAMPEONATO BRASILEIRO PASSOU A SER DISPUTADO POR PONTOS CORRIDOS ?\n\n\n");
			printf("     1 = 2003\n");
			printf("     2 = 2002\n");
			printf("     3 = 2001\n");
			printf("     4 = 2010\n");
			
			printf("\nR: ");
			scanf("%d", &resposta);
			
			if(resposta == 1){
				correta++;
			}else if(resposta == 2){
				errada++;
			
			}else if(resposta == 3){
				errada++;
			
