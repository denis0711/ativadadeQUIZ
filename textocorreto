int main(int argc, char *argv[]) {
	int quiz=0;


			
		printf("       -------------------BEM VINDO AO QUIZ-------------------\n\n\n");
		
		printf("QUAIS QUIZ VOCE VAI QUERER FAZER ???\n\n");
		
		printf("Digite 1: para quiz de FUTEBOL !!\n");
		printf("Digite 2: para quiz de BASQUETE !!\n");
		printf("Digite 3: para quiz de FILMES !!\n\n\n");
		
		
		
			do {
				scanf("%d", &quiz);
				
				switch(quiz){
				case 1:
				futebol();
				break;
				case 2:
				basquete();
				break;
				case 3:
				filmes();
				break;
			default:
				printf("\nDIGITO INVALIDO TENTE NOVAMENTE\n");
       
			
			}
		
				
			}while( quiz != 1 && quiz != 2 && quiz != 3);
			
			
	
		
	
	return 0;
}
